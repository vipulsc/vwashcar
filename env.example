# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/vwashcar"

# Plate Recognition API
PLATE_RECOGNIZER_API_KEY="your_plate_recognizer_api_key"

# Application Configuration
NODE_ENV="production"
NEXT_PUBLIC_BASE_URL="https://your-domain.com"

# Performance Configuration
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="false"

# Security Configuration
NEXTAUTH_SECRET="your-nextauth-secret-key"
NEXTAUTH_URL="https://your-domain.com"

# Database Connection Pool (Production)
DATABASE_CONNECTION_LIMIT="10"
DATABASE_POOL_TIMEOUT="30000"

# API Rate Limiting
API_RATE_LIMIT_WINDOW="900000" # 15 minutes
API_RATE_LIMIT_MAX_REQUESTS="100"

# Caching Configuration
REDIS_URL="redis://localhost:6379"
CACHE_TTL="300" # 5 minutes

# Logging Configuration
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING="true"

# Monitoring Configuration
ENABLE_HEALTH_CHECKS="true"
HEALTH_CHECK_INTERVAL="30000" # 30 seconds

# File Upload Configuration
MAX_FILE_SIZE="10485760" # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Development Overrides (set to false in production)
NEXT_PUBLIC_ENABLE_DEBUG="false"
NEXT_PUBLIC_ENABLE_MOCK_DATA="false"
